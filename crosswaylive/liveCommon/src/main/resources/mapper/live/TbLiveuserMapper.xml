    <select id="selectTeacherListByliveroomInfo" resultType="com.klsw.common.live.model.TbLiveuser" parameterType="int">
        SELECT
            a.*,
            b.teach_grade,
            b.cert_path,
            b.graduated_univ,
            b.region,
            b.isauth
        FROM tb_LiveUser a, tb_LiveTeacher b
        WHERE a.id IN (SELECT anchorId
                       FROM tb_LiveRoom
                       WHERE status = #{0} AND level = #{1}
                       GROUP BY anchorId)
              AND a.id = b.userId
    </select>
