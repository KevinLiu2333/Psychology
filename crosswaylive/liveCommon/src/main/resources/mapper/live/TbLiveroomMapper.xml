    <select id="selectAppointLiveroomCount" parameterType="java.lang.Integer" resultType="int">
        SELECT count(*)
        FROM tb_LiveRoom a, tb_LiveAppoint b
        WHERE b.liveroomId = a.id AND b.userId = #{0}
              AND a.status = #{1}

    </select>
