<mapper namespace="com.klsw.pianoCommon.api.mapper.TbClassroomMapper">
    <resultMap id="BaseResultMap" type="com.klsw.pianoCommon.api.model.TbClassroom">
        <!--
          WARNING - @mbggenerated
        -->
        <result column="ID" jdbcType="INTEGER" property="id"/>
        <result column="Title" jdbcType="VARCHAR" property="title"/>
        <result column="ClassType" jdbcType="INTEGER" property="classtype"/>
        <result column="Imgpath" jdbcType="VARCHAR" property="imgpath"/>
        <result column="Serices" jdbcType="VARCHAR" property="serices"/>
        <result column="Keynote" jdbcType="VARCHAR" property="keynote"/>
        <result column="VideoPath" jdbcType="VARCHAR" property="videopath"/>
