    <select id="selectClassroomList" parameterType="java.lang.Integer" resultType="com.klsw.pianoCommon.api.model.TbClassroom">
      select t1.*,t2.typename
      from tb_Classroom t1 join
      tb_ClassType t2 on t1.ClassType=t2.ID
      WHERE t2.ID = #{0}
      order by t1.ID
    </select>
