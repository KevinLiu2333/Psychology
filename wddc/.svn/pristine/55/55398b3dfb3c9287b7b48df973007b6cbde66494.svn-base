.login {
  background-image: url(../img/login/bg.jpg);
  background-repeat: no-repeat; 
  color: #ffffff;
  margin-bottom: 77px;
  padding: 38px 38px 267px;
}
.login-screen{
  min-height: 473px;
  padding: 123px 199px 33px 606px;
}
.login-icon {
  left: 200px;
  position: absolute;
  top: 160px;
  width: 150px;
}
.login-icon > img {
  display: block;
  margin-bottom: 6px;
  width: 100%;
}
.login-icon > h4 {
  font-size: 17px;
  font-weight: 700;
  line-height: 34px;
  opacity: .95;
}
.login-icon > h4 small {
  color: inherit;
  display: block;
  font-size: inherit;
  font-weight: 700;
}
.login-form {
  background-color: #edeff1;
  padding: 24px 23px 20px;
  position: relative;
  border-radius: 6px;
  width: 450px;
}
.login-form .control-group {
  margin-bottom: 6px;
  position: relative;
}
.login-form .login-field {
  border-color: transparent;
  font-size: 17px;
  text-indent: 3px;
}
.login-form .login-field:focus {
  border-color: #3A90BA;
}
.login-form .login-field:focus + .login-field-icon {
  color: #3A90BA;
}
.login-form .login-field-icon {
  color: #3A90BA;
  font-size: 16px;
  position: absolute;
  right: 15px;
  top: 3px;
  -webkit-transition: all .25s;
          transition: all .25s;
}
.login-link {
  color: #3A90BA;
  display: block;
  font-size: 13px;
  margin-top: 15px;
  text-align: center;
}