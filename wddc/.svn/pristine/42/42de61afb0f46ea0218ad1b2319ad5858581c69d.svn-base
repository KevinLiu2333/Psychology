    <script type="text/javascript">
        // include
        $("#header").load("include/header.html");
        $("#sidebar").load("include/sidebar.html",function () {
            $("#jksy").attr("class","");
            $("#fwjk").attr("class","active");
            $("#fwrdjk").attr("class","active");
        });
        $("#footer").load("include/footer.html");

        // 取随机数   min <= random < max
        function randomIndex(Min,Max){
            var Range = Max - Min;
            var Rand = Math.random();
            var num = Min + Math.floor(Rand * Range);
            return num;
        };

        //随机色tool
        function TransferColor(){
            var colorArray = ['danger','success','info','warning','purple','grey','orange'];
            return colorArray[randomIndex(0,7)];
        }

        $.ajax({
            type:"get",
            url:"json/server/serverRank.json",
            dataType:"text",
            success:function(result){
                var dataJson = eval('('+result+')');
                var i = 0;
                var j = 0;
                $("#userCount").html(eval(dataJson.userCount.join("+")));
                $("#dpCount").html(eval(dataJson.dpCount.join("+")));
                dataJson.userRank.forEach(function(data){
                    i++;
                    $("#userRank").append(
                        '<li style="border-bottom:1px dashed #BBB;margin-top:21px">'+
                            '<span class="badge badge-'+TransferColor()+'" style="font-size:18px">'+i+'</span>&nbsp;&nbsp; <span style="font-size: 18px">'+data+'（'+dataJson.userCount[i-1]+'）'+'</span>'+
                        '</li>'
                    )
                });
                dataJson.dpRank.forEach(function(data){
                    j++;
                    $("#dpRank").append(
                        '<li style="border-bottom:1px dashed #BBB;margin-top:21px">'+
                            '<span class="badge badge-'+TransferColor()+'" style="font-size:18px">'+j+'</span>&nbsp;&nbsp; <span style="font-size: 18px">'+data+'（'+dataJson.dpCount[j-1]+'）'+'</span>'+
                        '</li>'
                    )
                });
                // chars
                var myChart1 = echarts.init(document.getElementById('main2'));
                // 指定图表的配置项和数据
                var option1 = {
                    title: {
                    },
                    tooltip: {
                        trigger: 'axis',
                        axisPointer: {
                            type: 'shadow'
                        }
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        top:'5%',
                        containLabel: true,
                    },
                    xAxis: {
                        type: 'value',
                        boundaryGap: [0, 0.01]
                    },
                    yAxis: {
                        type: 'category',
                        data: dataJson.dpRank
                    },
                    series: [
                        {
                            name: '服务器使用量',
                            type: 'bar',
                            data: dataJson.dpCount
                        }

                    ]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart1.setOption(option1);
            }
        })


    </script>
