
/* -------------
 * Selects
 * ------------- */
.select_xxt .jqTransformSelectWrapper{
	width:162px;
	position:relative;
	height:26px;
	float:left;
	padding-left:0;
	border:#2d94c9 1px solid;
}

.select_xxt .jqTransformSelectWrapper div span{
	font-size: 14px;
	float: none;
	position: absolute;
	white-space: nowrap;
	height: 26px;
	line-height: 26px;
	padding: 0;
	overflow: hidden;
	cursor:pointer;
	text-align:center;
}

.select_xxt .jqTransformSelectWrapper  a.jqTransformSelectOpen{
	display: block;
	position: absolute;
	right: 0px;
	width: 26px;
	height: 26px;
	background: url(../images/btn_dn.png) no-repeat center center;
}

.select_xxt .jqTransformSelectWrapper ul{
	position: absolute;
	width:162px;
	top: 26px;
	left:-1px;
	list-style: none;
	background-color: #FFF;
	border: solid 1px #2d94c9;
	display: none;
	margin: 0px;
	padding: 0px;
	height: 150px;
	overflow: auto;
	overflow-y: auto;
	z-index:10;
}

.select_xxt .jqTransformSelectWrapper ul a{
	display:block;
	margin-left:-20px;
	padding:5px 0;
	text-align:center;
	text-decoration:none;
	color:#333;
	background-color: #FFF;
	font-size: 14px;
}

.select_xxt .jqTransformSelectWrapper ul a.selected{
	background: #EDEDED;
	color: #F00;
}

.select_xxt .jqTransformSelectWrapper ul a:hover{
	background:#3582c4;
	color: #fff;
}

/* -------------
 * Hidden - used to hide the original form elements
 * ------------- */
.select_xxt .jqTransformHidden{display: none;}