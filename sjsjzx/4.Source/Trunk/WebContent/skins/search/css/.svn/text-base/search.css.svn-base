/*基本*/
body {
	font-family:宋体;
	font-size:12px;
	color:#3d72ac;
	margin:0;
	padding:0;
	background:url(../images/search_bg.jpg) repeat-x;
}
a:link,a:visited  {
	color: #3d72ac;
	text-decoration:none;
}
a:hover,a:active {
	color: #ff0000;
	text-decoration:underline;
}
#search_01,#search_02,#search_03 {
	width:801px;
	margin:0 auto;
	}
#search_01 {
	height:170px;
	background:url(../images/search_01.jpg) no-repeat;
	}
#search_02 {
	height:56px;
	padding-top:30px;
	text-align:center;
	background:url(../images/search_02.jpg) no-repeat;
	}
#search_03 {
	clear:both;
	height:25px;
	background:url(../images/search_03.jpg) no-repeat;
	}
#search_content {
	float:left;
	margin:0px 15px 0 200px;
	}
#search_02 a {
	float:left;
	font-size:14px;
	line-height:30px;
	text-decoration:underline;
	}
#search_input {
	background: url(../images/search_input_bg.jpg) repeat-x;
	height:21px;
	border-top:1px solid #7c7c7c;
	border-left:1px solid #7c7c7c;
	border-bottom:1px solid #c3c3c3;
	border-right:none;
	font-size:15px;
	padding:5px 0 0 3px;
}
#search_button {
	background: url(../images/search_button_bg.jpg) no-repeat;
	width:92px;
	height:28px;
	border:0;
	cursor:hand;
	font-size:14px;
	font-weight:bold;
	line-height:28px;
}
#copyright {
	clear:both;
	padding:25px 0;
	line-height:24px;
	text-align:center;
	}