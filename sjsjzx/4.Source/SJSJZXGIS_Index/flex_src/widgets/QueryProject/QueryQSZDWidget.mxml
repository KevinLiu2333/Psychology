<?xml version="1.0" encoding="utf-8"?>
<viewer:BaseWidget xmlns:viewer="com.esri.viewer.*"
				   xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:esri="http://www.esri.com/2008/ags"
				   xmlns:circle="com.wonders.circle.*"
				   xmlns:comp="com.esri.viewer.components.*" widgetConfigLoaded="baseImageBtn_clickHandler(event)"
				   >
	<fx:Script>
		<![CDATA[
			import com.esri.viewer.ViewerContainer;
			import com.esri.viewer.AppEvent;
			import mx.collections.ArrayCollection;
			
			[Bindable]
			private var mapList:ArrayCollection;
			
			protected function baseImageBtn_clickHandler(event:Event):void
			{
				ViewerContainer.dispatchEvent(new AppEvent(AppEvent.BASEMAP_SWITCH, mapList[0].id));
			}
		]]>
	</fx:Script>
