			<titlefield>YD_ID</titlefield>
			<linkfield>YD_ID</linkfield>
			<icon>i_uni1.png</icon>
		</extentLayer>
		<infodata>
			<url>/SJSJZXGIS_Index/servlet/GetOracleData</url>
			<table>DC_LANDUSAGE</table>
			<fields>ID,PROJECT_NAME,PASS_NO,DOC_DATE,BUILD_UNIT,LAND_TYPE_NAME,BUILD_ADDRESS,BUILD_AREA</fields>
