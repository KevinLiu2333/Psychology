			<fields>GC_ID,GC_C10</fields>
			<fieldsCN>GC_ID</fieldsCN>
			<titlefield>GC_ID</titlefield>
			<linkfield>GC_ID</linkfield>
			<icon>i_uni1.png</icon>
		</extentLayer>
		<infodata>
			<url>/SJSJZXGIS_Index/servlet/GetOracleData</url>
			<table>DC_CONSTRUCTIONS_PERMIT</table>
			<fields>ID,PROJECT_NAME,PASS_NO,APPROVE_DATE,BUILD_UNIT,PROJECT_TYPE_NAME,BUILD_ADDRESS</fields>
