<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <!-- fill -->
    <s:Rect width="20" height="20"
            left="0" right="0" top="2" bottom="2"
            minHeight="14"
            minWidth="14">
        <s:fill>
            <s:BitmapFill fillMode="repeat" source="@Embed('assets/images/thumb.png')"/>
        </s:fill>
    </s:Rect>

</s:SparkSkin>
