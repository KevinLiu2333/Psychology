<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="disabled"/>
    </s:states>

    <!-- border/fill -->
    <s:Rect left="0" right="0" top="0" bottom="0"
            minHeight="14"
            minWidth="14">
        <s:fill>
            <s:BitmapFill x="-3"
                          fillMode="repeat"
                          rotation="90"
                          source="@Embed('assets/images/track.png')"/>
        </s:fill>
    </s:Rect>

</s:SparkSkin>
