  <select id="selectFavoriteNewsByTbCwkId" parameterType="java.lang.String" resultMap="BaseResultMap">
  	select tb_CWKNews.*,tb_CWK.name from tb_CWKFavorite
  	left join tb_CWKNews 
  	on tb_CWKFavorite.CWKNewsID =tb_CWKNews.ID
  	left join tb_CWK
  	on tb_CWK.ID=tb_CWKNews.ID
  	where tb_CWKFavorite.CWKID=(select ID from tb_CWK where name=#{0} and type=#{1})
  	order by tb_CWKNews.addtime
  </select>
  <!-- 自己写的sql不要使用pageHelper的排序语句，可能会发生错误 -->
  <select id="selectNewsOrderByPraise" resultMap="BaseResultMap">
    select tb_CWKNews.*,tb_CWK.name 
  	from tb_CWKNews left join tb_CWK
  	on tb_CWKNews.CWKID=tb_CWK.ID
  	order by tb_CWKNews.praise
  </select>
  <select id="selectNewsOrderByAddtime" resultMap="BaseResultMap">
    select tb_CWKNews.*,tb_CWK.name 
  	from tb_CWKNews left join tb_CWK
  	on tb_CWKNews.CWKID=tb_CWK.ID
  	order by tb_CWKNews.addtime
